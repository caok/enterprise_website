<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @product.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= markdown @product.description %></dd>
</dl>

<%- if can? :manage, @product -%>
  <div class="form-actions">
    <%= link_to t('link.back', :default => t("helpers.links.back")),
                products_path, :class => 'btn'  %>
    <%= link_to t('link.edit', :default => t("helpers.links.edit")),
                edit_product_path(@product), :class => 'btn' %>
    <%= link_to t('link.destroy', :default => t("helpers.links.destroy")),
                product_path(@product),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<%- end -%>
