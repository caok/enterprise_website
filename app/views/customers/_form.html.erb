<%= form_for @customer, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @customer %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :category_id, Category.all, :id, :name, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'span9' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= file_field_tag :file, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('link.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn' %>
    <%= link_to "新增类别",
                categories_path, :target => "_blank", :class => 'btn' %>
  </div>
<% end %>
